doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title AD PAS Admin
    //- link(rel='shortcut icon', href='data:image/x-icon;,', type='image/x-icon')
    link(rel='stylesheet', href='css/reset.css')
    link(rel='stylesheet prefetch', href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900|RobotoDraft:400,100,300,500,700,900')
    link(rel='stylesheet prefetch', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='css/style.css')
    link(rel='stylesheet', href='https://ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.css')
    link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js')
    script(src='https://code.angularjs.org/1.4.8/angular-route.js')
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-animate.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-aria.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-messages.min.js")

    script(src="https://ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.js")
    script(src='/js/routes.js', type="text/javascript")
    script(src='/js/app.js', type="text/javascript")
    //- script(src='/js/factories/users.js', type="text/javascript")

    script(src='/js/controllers/app-controller.js', type="text/javascript")
    script(src='/js/controllers/campaign-controller.js', type="text/javascript")
    script(src='/js/controllers/task-controller.js', type="text/javascript")
    script(src='/js/controllers/task-validate-controller.js', type="text/javascript")

  body(ng-app='mainApp')
    div(ng-controller="AppController as appCtrl")
      section(layout="row")
        md-sidenav.md-sidenav-left(md-component-id="left", md-is-locked-open="$mdMedia('gt-md')")
          md-toolbar.md-theme-indigo
            h1.md-toolbar-tools Admin {{user.email}}
          md-content(flex="nogrow", role="navigation")
            md-list()
              div(ng-repeat="action in actions")
                md-list-item.action-name(layout-align="center",layout="row", ng-class="{'selected-menu':action.selected}")
                  a(href="#{{action.path}}", ng-click="selectMenu($index)")
                    md-button(md-ink-ripple="#FF0000").md-primary {{action.name}}
                md-divider
        md-content.main-content(layout="column", flex)
          div.headerRow(layout="row")
            div(layout="row", layout-fill, layout-align="start center")
              md-button(hide-gt-md, ng-click="openMenu()")
                md-icon menu
            div(layout-align="end center")
              md-button.md-raised.md-mini-fab(ng-click="logout()") logout
          div.ng-view(flex) Home Page
